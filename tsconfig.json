{
    "compilerOptions": {
        "outDir": "./dist",
        "sourceMap": true,
        "strict": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "allowJs": true,
        "target": "es6",
        "lib": ["es2017", "es7", "es6", "dom"],
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true
    },
    "include": ["./src/**/*", "./*"],
    "exclude": ["./dist/**/*"]
}
