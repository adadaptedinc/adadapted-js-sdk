{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "allowJs": true,
        "target": "es5",
        "jsx": "react",
        "lib": ["es2017", "es7", "es6", "dom"],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "declaration": true
    },
    "include": ["./src/**/*", "./*"],
    "exclude": []
}
