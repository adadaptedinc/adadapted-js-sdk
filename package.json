{
    "name": "@adadapted/js-sdk",
    "description": "The AdAdapted JS SDK.",
    "version": "1.0.6",
    "main": "src/index.js",
    "module": "src/index.js",
    "types": "src/**/*.d.ts",
    "scripts": {
        "prettier-fix": "prettier --write \"*.{ts,tsx,js,jsx,json,css,scss,md}\" \"src/**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
        "lint": "eslint --version && eslint ./",
        "compile": "tsc --version && tsc --project tsconfig.json --noEmit --noErrorTruncation --pretty",
        "test-coverage": "rm -rf coverage && jest --version && jest --coverage",
        "test": "jest --version && jest",
        "prettier": "prettier --list-different \"*.{ts,tsx,js,jsx,json,css,scss,md}\" \"src/**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
        "npm-check-outdated": "npm outdated",
        "check-peer-dependencies": "npx check-peer-dependencies --npm"
    },
    "keywords": [
        "javascript",
        "adadapted",
        "web",
        "sdk",
        "ad",
        "ads"
    ],
    "repository": {
        "type": "git",
        "url": "https://gitlab.com/adadapted/adadapted-js-sdk"
    },
    "author": "Jeramy Usher <jusher@adadapted.com> (https://gitlab.com/adadapted/adadapted-js-sdk)",
    "license": "AdAdapted Platform License",
    "bugs": {
        "url": "https://gitlab.com/adadapted/adadapted-js-sdk/issues"
    },
    "homepage": "https://gitlab.com/adadapted/adadapted-js-sdk#readme",
    "dependencies": {
        "axios": "^0.27.2",
        "js-base64": "^3.7.2",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@babel/core": "^7.18.10",
        "@babel/plugin-transform-typescript": "^7.18.12",
        "@babel/preset-env": "^7.18.10",
        "@babel/preset-react": "^7.18.6",
        "@babel/preset-typescript": "^7.18.6",
        "@testing-library/jest-dom": "^5.16.5",
        "@testing-library/react": "^13.3.0",
        "@testing-library/user-event": "^14.4.3",
        "@types/jest": "^28.1.6",
        "@types/jsdom": "^20.0.0",
        "@types/react": "^18.0.17",
        "@types/react-dom": "^18.0.6",
        "@types/webpack": "^5.28.0",
        "@types/webpack-bundle-analyzer": "^4.4.1",
        "@types/webpack-env": "^1.17.0",
        "autoprefixer": "^10.4.8",
        "babel-loader": "^8.2.5",
        "copy-webpack-plugin": "^11.0.0",
        "css-loader": "^6.7.1",
        "eslint": "^8.12.0",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-jest": "^26.1.3",
        "eslint-plugin-jsdoc": "^38.1.4",
        "eslint-plugin-prefer-arrow": "^1.2.3",
        "fork-ts-checker-webpack-plugin": "^7.2.13",
        "jest": "^28.1.3",
        "jsdom": "^20.0.0",
        "mini-css-extract-plugin": "^2.6.1",
        "postcss-loader": "^7.0.1",
        "prettier": "^2.7.1",
        "sass": "^1.54.4",
        "sass-loader": "^13.0.2",
        "source-map-loader": "^4.0.0",
        "style-loader": "^3.3.1",
        "ts-jest": "^28.0.7",
        "ts-loader": "^9.3.1",
        "type-zoo": "^3.3.0",
        "typescript": "^4.7.4",
        "webpack": "^5.74.0",
        "webpack-bundle-analyzer": "^4.5.0",
        "webpack-cli": "^4.10.0",
        "webpack-dev-server": "^4.9.3"
    },
    "jest": {
        "testEnvironmentOptions": {
            "url": "http://localhost"
        },
        "setupFilesAfterEnv": [
            "<rootDir>/jest.setup.ts"
        ],
        "transform": {
            "^.+\\.[j|t]sx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json"
        ],
        "modulePaths": [
            "<rootDir>/node_modules"
        ],
        "moduleNameMapper": {
            "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
            "\\.(s?css)$": "<rootDir>/__mocks__/styleMock.js",
            "^src/(.*)$": "<rootDir>/src/$1"
        },
        "collectCoverage": false,
        "coverageDirectory": "coverage",
        "collectCoverageFrom": [
            "src/**/*.{js,jsx,ts,tsx}",
            "!src/api/**/*.*",
            "!src/**/*.d.ts",
            "!src/index.tsx"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 5,
                "functions": 5,
                "lines": 5,
                "statements": 5
            }
        },
        "watchPathIgnorePatterns": [
            "<rootDir>/jest.json"
        ]
    }
}
