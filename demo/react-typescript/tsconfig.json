{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        "module": "es6",
        "moduleResolution": "node",
        "allowJs": true,
        "target": "es6",
        "jsx": "react",
        "lib": ["DOM", "DOM.Iterable", "ES6", "ES2021.String", "ScriptHost"],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true
    },
    "include": ["react-typescript/src/**/*", "./*", "type-definitions/constants.d.ts"],
    "exclude": []
}
